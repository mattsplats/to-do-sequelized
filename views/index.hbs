<div class="container">
	<div class="jumbotron">
		<h1>To-Do List</h1>
	</div>

	<div class="row min-height">

		<!-- Incomplete tasks -->
		<div class="col-md-7">
			<div class="text-center">
				<h2>Tasks:</h2>
			</div>

			<ul id="list" class="list-group">
			{{#each tasks}}
				{{#unless isComplete}}
				<li id="item_{{id}}" class="list-group-item">
					<div id="text_{{id}}">
						<button type="button" data-id="{{id}}" class="btn btn-danger delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
						<button type="button" data-id="{{id}}" class="btn btn-default update"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
						<span>&nbsp;</span>
						<span id="task_{{id}}">{{task}}</span>
						<div class="pull-right">
							<button type="button" data-id="{{id}}" class="btn btn-success complete"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
						</div>
					</div>

					<div id="update_{{id}}" class="input-group" style="display: none;">
						<span class="input-group-btn">
							<button type="button" class="btn btn-success submitUpdate" data-id="{{id}}"><span class="glyphicon glyphicon-ok" aria-hidden="true"></button>
						</span>
						<input type="text" class="form-control updateInput" id="update_input_{{id}}" value="{{task}}" maxlength="30">
					</div>
				</li>
				{{/unless}}
			{{/each}}
			</ul>
		</div> <!-- End col -->

		<!-- Completed tasks -->
		<div class="col-md-5">
			<div class="text-center">
				<h2>Completed:</h2>
			</div>

			<ul id="done" class="list-group">
			{{#each tasks}}
				{{#if isComplete}}
				<li class="list-group-item">{{task}}</li>
				{{/if}}
			{{/each}}
			</ul>

			<div>
				<button type="button" id="clear_completed" class="btn btn-danger no-display">Clear Completed Tasks</button>
			</div>
		</div> <!-- End col -->

	</div> <!-- End row -->

	<br/>

	<!-- Create task -->
	<div class="row">
		<div class="col-xs-12">
			<label for="create">Add new task:</label>
			<div class="input-group">
				<span class="input-group-btn">
	        <button class="btn btn-success" type="button" id="create"><span class="glyphicon glyphicon-ok" aria-hidden="true"></button>
	      </span>
			  <input type="text" class="form-control" id="new_task" maxlength="30">
			</div>
		</div>
	</div> <!-- End row -->

	<br/>

	<!-- Info -->
	<div class="row">
		<div class="col-md-12">
			<p>
				<a href="https://github.com/mattsplats/to-do">GitHub Repo</a>
			</p>
		</div>
	</div>
</div> <!-- End row -->